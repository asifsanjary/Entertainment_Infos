<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Composite.Background.View.Category.Preview"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="100dp">

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/movieBackdropView"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_movie_filter_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/moviePopularityPercentage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#60BF2D2D"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:layout_gravity="top|start"
            android:gravity="center_vertical|center_horizontal"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/movieNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In my life"
            android:textStyle="bold"
            android:maxLines="2" />

        <TextView
            android:id="@+id/movieGenresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="11sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/movieOverviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="9sp"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>
</LinearLayout>