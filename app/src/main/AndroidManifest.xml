<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asifsanjary.find_all_movies_tvs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.asifsanjary.find_all_movies_tvs.FindAllMoviesTvApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Find_All_Movie_Tv_App">
        <activity
            android:name="com.asifsanjary.find_all_movies_tvs.view.MovieListActivity"
            android:parentActivityName="com.asifsanjary.find_all_movies_tvs.view.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.asifsanjary.find_all_movies_tvs.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>